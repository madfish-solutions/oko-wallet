{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
