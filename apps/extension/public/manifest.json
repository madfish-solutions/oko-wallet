{
  "name": "Klaytn Wallet",
  "description": "Klaytn Wallet description",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open the popup"
  },
  "background": {
    "service_worker": "scripts/background-script.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content-script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "scripting",
    "storage"
  ],
  "optional_permissions": [
    "unlimitedStorage"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "mics/logo192.png",
    "48": "mics/logo192.png",
    "128": "mics/logo192.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
