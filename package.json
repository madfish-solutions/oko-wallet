{
  "name": "klaytn-wallet",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Andrii Ivaniv",
  "scripts": {
    "check:all": "yarn ts && yarn lint && yarn test && yarn e2e",
    "install:all": "yarn && yarn install:extension && yarn install:extension-e2e && yarn install:mobile && yarn install:libs && yarn install:libs-be && yarn install:backend && yarn install:shelter && yarn install:shared",
    "install:extension": "yarn --cwd apps/extension",
    "install:extension-e2e": "yarn --cwd apps/extension-e2e",
    "install:mobile": "yarn --cwd apps/mobile",
    "install:libs": "yarn --cwd libs/ui",
    "install:backend": "yarn --cwd apps/backend",
    "install:libs-be": "yarn --cwd libs/backend-types",
    "install:shelter": "yarn --cwd libs/shelter",
    "install:shared": "yarn --cwd libs/shared",
    "install:pods": "cd apps/mobile/ios && pod install",
    "extension": "yarn --cwd apps/extension start",
    "android": "yarn --cwd apps/mobile android",
    "ios": "yarn --cwd apps/mobile ios",
    "backend": "yarn --cwd apps/backend backend",
    "backend:dev": "yarn --cwd apps/backend backend:dev",
    "build:backend": "yarn --cwd apps/backend build",
    "build:extension": "yarn --cwd apps/extension build",
    "build:android": "yarn --cwd apps/mobile android:build:apk",
    "ts": "yarn ts:ui && yarn ts:e2e && yarn ts:be && yarn ts:shelter && yarn ts:shared",
    "ts:ui": "yarn --cwd libs/ui ts",
    "ts:e2e": "yarn --cwd apps/extension-e2e ts",
    "ts:be": "yarn --cwd libs/backend-types ts",
    "ts:shelter": "yarn --cwd libs/shelter ts",
    "ts:shared": "yarn --cwd libs/shared ts",
    "lint": "eslint .",
    "test": "yarn --cwd libs/ui test",
    "e2e": "yarn --cwd apps/extension-e2e start",
    "find-deadcode": "yarn --cwd libs/ui find-deadcode",
    "clear:watchman": "if [ -x \"$(command -v watchman)\" ]; then watchman watch-del-all; fi",
    "generate-contract-types": "yarn --cwd libs/ui generate-contract-types"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.1",
    "prettier": "^2.8.2",
    "typescript": "^4.8.4"
  }
}
