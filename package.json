{
  "name": "klaytn-wallet",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Andrii Ivaniv",
  "scripts": {
    "install:all": "yarn && yarn install:extension && yarn install:extension-e2e && yarn install:mobile && yarn install:libs",
    "install:package": "cd libs/ui && yarn add -D $Package && cd ../../ && cd apps/extension && yarn add $Package && cd .. && cd mobile && yarn add $Package",
    "remove:package": "cd libs/ui && yarn remove $Package && cd ../../ && cd apps/extension && yarn remove $Package && cd .. && cd mobile && yarn remove $Package",
    "install:extension": "cd apps/extension && yarn",
    "install:extension-e2e": "cd apps/extension-e2e && yarn",
    "install:mobile": "cd apps/mobile && yarn",
    "install:libs": "cd libs/ui && yarn",
    "install:pods": "cd apps/mobile/ios && pod install",
    "extension": "cd apps/extension && yarn start",
    "android": "cd apps/mobile && yarn android",
    "ios": "cd apps/mobile && yarn ios",
    "build:extension": "cd apps/extension && yarn build",
    "build:android": "cd apps/mobile && yarn android:build:apk",
    "ts": "yarn ts:ui && yarn ts:e2e",
    "ts:ui": "cd libs/ui && yarn ts",
    "ts:e2e": "cd apps/extension-e2e && yarn ts",
    "lint": "eslint .",
    "test": "cd libs/ui && yarn test",
    "e2e": "cd apps/extension-e2e && yarn start",
    "find-deadcode": "cd libs/ui && yarn find-deadcode",
    "clear:watchman": "if [ -x \"$(command -v watchman)\" ]; then watchman watch-del-all; fi",
    "generate-contract-types": "cd libs/ui && yarn generate-contract-types"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.1",
    "prettier": "^2.8.2",
    "typescript": "^4.8.4"
  }
}
